generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


//Model User
model User {
  id Int @id @default(autoincrement())
  email String? @unique
  firstname String? 
  lastname String?
  password String?
  avatarUrl String?
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}


